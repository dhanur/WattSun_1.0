        <script type="text/javascript" src="/assets/jquery.customSelect.js"></script>
        <script src="/assets/bootstrap.min.js"></script>
        
        <script src="/assets/bootstrap-select.js"></script>
       
        <script type="text/javascript">
            $(function() {

                $('select.styled').customSelect();

            });
        </script>

      
        <style type="text/css">
            span.customSelect {
                font-size:15px;
                background-color: #fff;
                color:#7c7c7c;
                padding:10px 10px;
                border:2px solid #B0B6BB;
                -moz-border-radius: 5px;
                -webkit-border-radius: 5px;
                border-radius: 5px 5px;
            }
            span.customSelect.changed {
                background-color: #fff;
            }
            .customSelectInner {
                background:url(/assets/customSelect-arrow.gif) no-repeat center right;
                width:250px !important;
            }
        </style>
        
           <script>
				
			$(document ).ready(function() {
					
					
					$('#full_name').focusin(function() { 
					  $('#fname').html(''); 					
					});
										
															
					$('#email').focusin(function() { 
					  $('#email_id').html(''); 					
					});
					
					$('#what_about').focusin(function() { 
					  $('#wabout').html(''); 					
					});
					
					$('#message').focusin(function() { 
					  $('#msg').html(''); 					
					});
					
			});
				
					
			function dataValidation()
			{
								
					var flag=0;
					
					if ($('#full_name').val() == '' || $('#full_name').val() == null)
					{
						$('#fname').html("Name can't be blank.");
						
						flag=1;
					}
					
					else
				   	{
						    $('#fname').html("");
					}
				 
					if ($('#email').val() == '' || $('#email').val() == null)
					{
						$('#email_id').html("Email id can't be blank.");
						
						flag=1;
					}
					
					else
				   	{
						    $('#email_id').html("");
					}
					
					
					if ($('#what_about').val() == '' || $('#what_about').val() == null)
					{
						$('#wabout').html("What is about can't be blank.");
						
						flag=1;
					}
					
					else
				   	{
						    $('#wabout').html("");
					}
					
					
				   if ($('#message').val() == '' || $('#message').val() == null)
						{
							$('#msg').html("Message can't be blank.");
							
							flag=1;
						}
						
					else
				   	{
						    $('#msg').html("");
					}
						
				   
					if (flag==1)
					{
						return false;
						
					}
					else{		
						return true;
					}
			}
	   
	     </script>
           
        
    </head>
    <body>

        <div class="container">
