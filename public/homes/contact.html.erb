                                        </select>
                                    <span style="color: red;" class="error_msg" id="wabout"></span></p>
                                    <div style="clear:both"></div>
                                    <p><textarea id="message" class="form-control" name="message" id="message" rows="8" placeholder="Message"></textarea> <span style="float:left; color: red;" class="error_msg" id="msg"></span></p>
									<div style="clear:both"></div>
                                    <input id="sub_mit"type="submit" class="btn btn-embossed btn-primary" value="Submit">
                                </form>
                            </div>
                        </div>
                    </div>
