	    <script>
				
			$( document ).ready(function() {
					var first = getUrlVars()["id"];
			        var second = getUrlVars()["vt"];
			        $("#emailid").val(first);
					$("#vt").val(second);
					
					
					$('#password').focusin(function() { 
					  $('#passwd').html(''); 
					  $('#passwd_match').html(''); 
					});
					
					
					$('#repeat_password').focusin(function() { 
					  $('#repeat_passwd').html(''); 
					  $('#passwd_match').html(''); 
					});
					
			});
				
			function getUrlVars() {
			    var vars = {};
			    var parts = window.location.href.replace(/[?&]+([^=&]+)=([^&]*)/gi, function(m,key,value) {
			        vars[key] = value;
			    });
			    return vars;
			}
			
		
		
			function resetPassword()
			{
								
					var flag=0;
				 
					if ($('#password').val() == '' || $('#password').val() == null)
					{
						$('#passwd').html("Password can't be blank.");
						
						flag=1;
					}
					
					
					else if ($('#password').val().length < 8)
					{
						$('#passwd').html("Password must be of at least 8 characters.");
						flag=1;
						
					}
					
					else
					{
						$('#passwd').html("");
					}
				
				
					if ($('#repeat_password').val() == '' || $('#repeat_password').val() == null)
						{
							$('#repeat_passwd').html("Repeat password can't be blank.");
							
							flag=1;
						}
						
					else
				   	{
						    $('#repeat_passwd').html("");
					}
						
				   
				    				
					if (flag==1)
					{
						return false;
						
					}
				 
				    if ($('#password').val() != $('#repeat_password').val())	
				    {
				    	   $('#passwd_match').html("Your password does not match.");
				    	   flag=1;
				    }	
				    
				    
				    else
				    {
						    $('#passwd_match').html("");
					}
					
							
					
									
					if (flag==1)
					{
						return false;
						
					}
					else{	
						
						 return true; 
                	  						
					}
			}
	   
	     </script>
        
    </head>
