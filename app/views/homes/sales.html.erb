<!DOCTYPE html>
<html lang="en">
    <head>
        <title>
            ProspectZen
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <link rel="icon" href="/assets/favicon.ico" type="image/x-icon"> 
        <link rel="shortcut icon" href="/assets/favicon.ico" type="image/x-icon">
        <link href="/assets/bootstrap.css" rel="stylesheet">
        <link href="/assets/flat-ui.css" rel="stylesheet">
        <link href="/assets/reset.css" rel="stylesheet">
        <link href="/assets/style_admin_user_sales.css" rel="stylesheet">

<!--        <link href="/assets/mediaqueries_admin_user_purchase_list.css" rel="stylesheet">-->
        <link rel="stylesheets" type="text/css" href="/assets/dataTables.bootstrap.css">
        <style>
            .mylabel{
            background-color: #999;
            }
            .label-important{
                background-color:#b94a48;
            
            }
            #content_wrapper{
            
                min-width: 1083px;
            
            }
            #menu_content{
            
                min-width: 900px;
            
            }
            .panel-body{
                border-top-left-radius:0px;
                border-top-right-radius:0px;
                padding:0px;
                padding-top:15px;
                padding-bottom:15px;
            }
            .panel-body ul li{
/*                border-bottom:1px solid #0C8722;*/
                padding-left:16px;
            }
            .panel-body ul li:last-child{
                border-bottom:0px;
            }
            .nav-pills > li > a{
                font-size:16px
            }
            #usr_purchases a{
            font-size:16px;
                
            }
            #usr_sales a{
            font-size:16px;
                
            }
            			span.customSelect {
				
				padding: 6px 12px !important;
				border: 2px solid #5cb85c;
				-moz-border-radius: 0px;
				-webkit-border-radius: 0px;
				border-radius: 0px;
                height:41px !important
			}
			span.customSelect.changed {
				background-color: #5cb85c;
                color:#fff;
			}
			.customSelectInner {
				background: url(/assets/customSelect-arrow.gif) no-repeat center right;
                width:50px !important;
				
			}
            </style>
        <script src="/assets/jquery.js"></script>
        <script type="text/javascript" src="/assets/jquery.customSelect.js"></script>

        <script src="/assets/bootstrap.min.js"></script>
        <script src="/assets/jquery.dataTables.min.js"></script>
        <script src="/assets/dataTables.bootstrap.js"></script>
        <script>
            $(document).ready(function() {
                
                
                
                $('#example').dataTable({
                	
                	"aaSorting": [[ 0, "desc" ]],
					"aoColumns": [
						null,
						null,
						null,
						null,
						null,
						null
					]
			    });
                $( "#example_length" ).append('<a href="/homes/allsalescsv" style="float: right;font-size: 16px;margin-right: 15px;background: #5cb85c;color: #fff;font-family: latolig;padding: 10px;">Export CSV file</a>');
                $('#example_length label select.input-sm').customSelect();
                $('.input-sm').css({"padding":"0px 12px","fontSize":"18px","fontFamily":"latobold"});
                $('.dataTables_filter input').attr("placeholder", "Search by address, name, city, zip, anything!");
                $('.dataTables_filter input').attr("class", "form-control");
                $('.dataTables_filter input').css({"border-radius":"0px","border-color":"#5cb85c","fontFamily":"latoreg"});
                $('#example_paginate').css({"font-size":"14px","float":"right","margin-bottom":"25px","margin-right":"15px"});
                $('.dataTables_filter input').css({"width":"90%","margin-top":"-13px","position":"absolute","right":"22px"});
                $('.pagination > .active > a, .pagination > .active > span, .pagination > .active > a:hover, .pagination > .active > span:hover, .pagination > .active > a:focus, .pagination > .active > span:focus').css({"background-color": "#5cb85c","border-color": "#5cb85c"});
//                $('.dataTables_filter input').css("margin-top", "5px");
                $('table').css({"width":"100%"});
                $('#example_length select.form-control').css({"height":"46px","border-radius":"0px","border-color":"#5cb85c"});
                $('#example_length').css({"margin-left":"5px","padding":"5px 0px"});
                $('#example_info.dataTables_info').css({"display":"none"});
                $('.dataTables_length').css("float","left");
                $('.dataTables_length').css("width","100%");
                
         
            });
            
            
           
       	
		function abc(tranc_id)
          {
          	
          	$.ajax({
        	url: "/homes/salesviewtransaction",
        	type: "POST",
        	dataType: 'JSON',
        	data: { 'tranc_id' : tranc_id }, 
        	success: function(response){
        			
        			    	window.location.href='/homes/salesview'		
        	        }
        	 });          	
          }
            
        </script>
		
		
	
		
    </head>
    <body>

        <div class="container">
            <div id="bgnav" class="navbar navbar-fixed-top navbar-inverse">
                <div id="navigation" role="navigation">

                    <div class="navbar-header">

                        <button id="btn_collapse" type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <a class="navlink" style="color: white;" href='/homes/adminuserstatus'> 
                            <div id="logo"><p class="logo_txt"></p></div>



                        </a>

                    </div>
                    <div class="collapse navbar-collapse no-transition">
                        <ul id="pull_right" class="nav navbar-nav">
                             <li>
								<form action="../homes/adminlogout" method="post">
									<input id="login" class="form-control" type="submit" value="LOGOUT"/>

								</form>
							</li>
                        </ul>

                    </div><!-- /.nav-collapse -->

                </div><!-- /.navbar -->
            </div>
        </div>
        <!--End .container-->

        <div id="bg_wrapper">
            <div id="content_wrapper">
                <div id="sidebar_menu" style="float:left;">
                    <ul id="menu_list" class="nav nav-pills nav-stacked">
                  
                        
                        
                       <li id="usr_status">
							<a href="/homes/adminuserstatus"><span style="margin-right:3px;font-size:16px;" class="glyphicon glyphicon-thumbs-up"></span>User Statuses</a>
						</li>
						<li id="usr_profile">
							<a href="/homes/adminuserprofile"><span style="margin-right:3px;font-size:16px;" class="glyphicon glyphicon-user"></span>User Profiles</a>
						</li>
						<li id="usr_payment">
							<a href="/homes/adminuserpayment"><span style="margin-right:3px;font-size:16px;" class="glyphicon glyphicon-credit-card"></span>User Payment</a>
						</li>
                        <li id="usr_purchases"  class="panel">
                           <a  class="panel-title" data-toggle="collapse" data-parent="#accordion" href="#collapseOne"><span style="margin-right:3px;font-size:16px;" class="glyphicon glyphicon-list"></span>User Purchases</a>
                            <div id="collapseOne" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <ul>
                                        <li id="admn_itq_panel"><a href="/homes/adminuserpurchase" style="color:#000">Instant Prospect Qualifier  </a></li>
                                        <li id="admn_itm_panel"><a href="#" style="color:#000">Instant Prospect Generator</a></li>
                                        <li id="admn_ih_panel"><a href="#" style="color:#000">Instant 3D Home</a></li>
                                    </ul>
                                </div>
                            </div>
                        </li>
						<li id="usr_sales">

							<a href="/homes/sales"><span style="margin-right:3px;font-size:16px;" class="glyphicon glyphicon-usd"></span>Sales</a>

						</li>
						
                    </ul>
                </div>
                <div id="menu_content" style="float:right;">
                    
                    <div style="clear:both;"></div>
                    <div id="menu_content_header">
                       <div style="float:left"> View all prospects qualified on ProspectZen since the beginning of time </div>
                        
                        <% if session[:super_admin_user_id]%>						
						<div style="float:right"><a href="/homes/superadmin" style="color:#fff">Super Admin</a></div><div style="clear:both"></div>
						<%end%>
                        <div style="clear:both"></div>				
						
                    </div>

                    <div id="menu_content_profile_set">
                     <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
							<thead>
								<tr>
									<th>Transaction ID</th>
									<th>Address</th>
									<th>Name</th>
									<th>Company</th>
									<th>On</th>
									<th>View</th>
								</tr>
							</thead>
							<tbody>								
								
						      <% @alltransactions.each do |tranc| %>
						        <tr class="odd gradeX">     
						         <td><%= tranc.transaction_id %> </td>
						         <td><%= tranc.address %></td>
						         <td><%= tranc.first_name %> <%= tranc.last_name %></td>
						         <td><%= tranc.company_name %></td>
						         
						         <% user_zone_date=tranc.purchase_date
						            if (tranc.user_zone)[0]=='+'
						            	user_zone_date=user_zone_date+(tranc.user_zone)[1,3].to_i.hours
						            	user_zone_date=user_zone_date+(tranc.user_zone)[4,6].to_i.minutes
						            elsif  (tranc.user_zone)[0]=='-'
						            	user_zone_date=user_zone_date-(tranc.user_zone)[1,3].to_i.hours
						            	user_zone_date=user_zone_date-(tranc.user_zone)[4,6].to_i.minutes
						            end
						       	 %>
						         
						         <td><%= (user_zone_date).strftime('%d %b, %H:%M') %></td>
						         <td class="center"><a style="cursor: pointer" onclick='abc("<%= tranc.transaction_id %>")'>View</a></td>
							    </tr>
						   	  <% end %>							
								
					 	</tbody>
					  </table>
                        
                    </div>
                </div>
                <div style="clear:left;"></div>

            </div>
            <!--End #content_wrapper-->
        </div>
        <!--End #bg_wrapper-->

    </body>

</html>
