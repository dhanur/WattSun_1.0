<!DOCTYPE html>
<html lang="en">
	<head>
		<title> ProspectZen </title>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
                <link rel="icon" href="/assets/favicon.ico" type="image/x-icon"> 
        <link rel="shortcut icon" href="/assets/favicon.ico" type="image/x-icon">
		<link href="/assets/bootstrap.css" rel="stylesheet">
		<link href="/assets/flat-ui.css" rel="stylesheet">
		<link href="/assets/reset.css" rel="stylesheet">
		<link href="/assets/style_purchaseitq.css" rel="stylesheet">

		<link href="/assets/mediaqueries_purchase_itq.css" rel="stylesheet">
		<link rel="stylesheets" type="text/css" href="/assets/dataTables.bootstrap.css">
        <style>
            
            	span.customSelect {
				
				padding: 6px 12px !important;
				border: 2px solid #5cb85c;
				-moz-border-radius: 0px;
				-webkit-border-radius: 0px;
				border-radius: 0px;
                height:41px !important
			}
			span.customSelect.changed {
				background-color: #5cb85c;
                color:#fff;
			}
			.customSelectInner {
				background: url(/assets/customSelect-arrow.gif) no-repeat center right;
                width:50px !important;
				
			}
            </style>
        
		<script src="/assets/jquery.js"></script>
		<script src="/assets/jquery.customSelect.js"></script>

		<script src="/assets/bootstrap.min.js"></script>
		<script src="/assets/jquery.dataTables.min.js"></script>
		<script src="/assets/dataTables.bootstrap.js"></script>
		<script>
			$(document).ready(function() {

				$('#example').dataTable();
                  $('#example_length label select.input-sm').customSelect();
                $('.input-sm').css({"padding":"0px 12px","fontSize":"18px","fontWeight":"bold"});
                $('label').css("fontSize","18px");
				$('.dataTables_filter input').attr("placeholder", "Search by address, name, city, zip, anything!");
				$('.dataTables_filter input').attr("class", "form-control");
                $('.dataTables_filter input').css({"border-radius":"0px","border-color":"#5cb85c","font-weight":"normal"});
				$('#example_filter label').css("width","100%");
                $('#example_paginate').css({
					
					"font-size" : "14px",
					"float" : "right",
					"margin-bottom" : "25px",
                    "margin-right" : "15px",
					
				});
				$('.pagination').css({
					"display":"inline-flex"
					
				});
				
				if($(window).width()<=409){
					$('.pagination > li > a, .pagination > li > span').css("padding","4px 8px");
					
					
				}
				else{
					$('.pagination > li > a, .pagination > li > span').css("padding","6px 12px");
				}



				
				
				$('.dataTables_filter input').css({
					"width" : "100%",
					"margin-top" : "5px",
					"margin-left":"6px"
				});
                
				//                $('.dataTables_filter input').css("margin-top", "5px");
				$('table').css({
					"width" : "100%"
				});
                $('#example_length label select').css("display","inline");
				$('#example_length select.form-control').css({"height":"46px","border-radius":"0px","border-color":"#5cb85c"});
                if($(window).width()<=767){
                    $('#example_length select.form-control').css("width", "42px");
                    $('.input-sm').css({"padding":"8px 8px !important","width":"75px"});
                    $('label').css("fontSize","14px");
                    
                }
                $(window).resize(function(){
                    
                    if($(window).width()<=767){

                        $('#example_length select.form-control').css("width", "42px");
                        $('.input-sm').css({"padding":"8px 8px !important","width":"75px"});
                        $('label').css("fontSize","14px");
                        
                    }
                    if($(window).width()>767){
                        $('label').css("fontSize","18px");
                    
                    }    
                    $('#collapseOne').removeClass('panel-collapse collapse in');
                    
                    $('#collapseOne').addClass('panel-collapse collapse');
                });
				
				$('#example_length').css({
					"margin-left" : "5px",
					"padding" : "5px 10px",
                    "float":"right"
				});
				$('#example_info.dataTables_info').css({
					"display" : "none"
				});
				
				
				if($(window).width()<=409){
					$('.pagination > li > a, .pagination > li > span').css("padding","5px 9px");
					
					
					}
					else{
						$('.pagination > li > a, .pagination > li > span').css("padding","6px 12px");
					}
				
				
			});
			
			
			
		function abc(tranc_id)
          {
          	
          	$.ajax({
        	url: "/homes/viewtransction",
        	type: "POST",
        	dataType: 'JSON',
        	data: { 'tranc_id' : tranc_id }, 
        	success: function(response){
        			
        			    	window.location.href='/homes/userpurchaseview'		
        	        }
        	 });          	
          }
			
			
			
			
			
		</script>
		<script type="text/javascript">
			$(function() {

				$('select.styled').customSelect();

			});
		</script>

	</head>
	<body>

		<div class="container">
			<div id="bgnav" class="navbar navbar-fixed-top navbar-inverse">
				<div id="navigation" role="navigation">

					<div class="navbar-header">

						<button id="btn_collapse" type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>

						<a class="navlink" style="color: white;" href='/homes/viewmap'>
						<div id="logo"></div> </a>

					</div>
					<div id="top_menu_scroll" class="collapse navbar-collapse no-transition">
						<ul id="pull_right" class="nav navbar-nav">

							<li id="else" class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">What else does ProspectZen do? <b style="color:#fff" class="caret"></b></a>
								<ul class="dropdown-menu">
									<li>
										<a href="#">Instant Prospect Generator
										<br />
										Coming soon!</a>
									</li>
									<li>
										<a href="#">Instant 3D Home
										<br />
										Coming soon!</a>
									</li>
								</ul>
							</li>
							<li id="faq">
								<a class="navlink" href="/homes/faq">FAQs</a>
							</li>

							<li id="setn" class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown" >Settings<b style="color:#fff" class="caret"></b></a>
								<ul class="dropdown-menu">
									<li>
										<a href="/homes/userprofile">Profile</a>
									</li>
									<li>
										<a href="/homes/userpayment">Payment</a>
									</li>
									<li>
										<a href="/homes/purchaseitq">Purchases</a>
									</li>
									<li>
										<a href="/homes/userproblem">Problem?</a>
									</li>
								</ul>
							</li>
							<li>
								<form action="../homes/logout" method="post">
									<input id="login" class="form-control" type="submit" value="LOGOUT"/>

								</form>
							</li>

						</ul>

					</div><!-- /.nav-collapse -->

				</div><!-- /.navbar -->
			</div>
		</div>
		<!--End .container-->

		<div id="bg_wrapper">
			<div id="content_wrapper">
				<div id="sidebar_menu" style="float:left;">
					<ul id="menu_list" class="nav nav-pills nav-stacked">
						
                        <li id="profile"><a href="/homes/userprofile"><span style="margin-right:3px;font-size:13px;" class="glyphicon glyphicon-user"></span>Profile</a></li>
                        <li id="payment"><a href="/homes/userpayment"><span style="margin-right:3px;font-size:13px;" class="glyphicon glyphicon-credit-card"></span>Payment</a></li>
                        <li id="purchases"><a  class="panel-title" data-toggle="collapse" data-parent="#accordion" href="#collapseOne"><span style="margin-right:3px;font-size:12px;" class="glyphicon glyphicon-list"></span>Purchases</a>
							<div id="collapseOne" class="panel-collapse collapse">
								<div class="panel-body">
									<ul>
										<li id="itq_panel">
											<a href="/homes/purchaseitq">Instant Prospect Qualifier</a>
										</li>
										<li id="itm_panel">
											<a href="#">Instant Prospect Generator</a>
										</li>
										<li id="ih_panel">
											<a href="#">Instant 3D Home</a>
										</li>
									</ul>
								</div>
							</div></li>
                        <li id="problem"><a href="/homes/userproblem"><span style="margin-right:3px;font-size:13px;" class="glyphicon glyphicon-question-sign"></span>Problem?</a></li>
					</ul>
				</div>
				<div id="menu_content" style="float:right;position:relative">
					<div id="menu_content_header">
						<%= @transctions.length %> prospects qualified in the last 90 days
					</div>
					<div>

						<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
							<thead>
								<tr>
									<th>Transaction ID</th>
									<th>Address</th>
									<th>On</th>
									<th>View</th>
								</tr>
							</thead>
							<tbody>								
								
						      <% @transctions.each do |tranc| %>
						        <tr class="odd gradeX">     
						         <td><%= tranc.transaction_id %> </td>
						         <td><%= tranc.address %></td>
						         <td><%= (tranc.last_purchase_date).strftime('%d %b, %I:%M%p') %></td>
						         <td class="center"><a style="cursor: pointer" onclick='abc("<%= tranc.transaction_id %>")'>View</a></td>
							    </tr>
						   <% end %>							
								
					 	</tbody>
					  </table>

					</div>

				</div>
				<div style="clear:both;"></div>

			</div>
			<!--End #content_wrapper-->
		</div>
		<!--End #bg_wrapper-->

	</body>

</html>
