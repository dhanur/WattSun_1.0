    <script>
        
        
            function al_common(){
                    
                if($(window).width()>767){
               
                    var cla=$("#side_scroll").attr('class');
                    if(cla=="navbar-collapse no-transition collapse in"){
                        $("#side_scroll").removeClass('navbar-collapse no-transition collapse in');
                        $("#side_scroll").addClass("collapse navbar-collapse no-transition");
                    }
                }
                else{
                
                   $("#side_scroll").addClass("collapse navbar-collapse no-transition");
                }
                
                
                
                var nav_height=$('#bgnav').height();
                var bg_wrap_height=$(window).height()-nav_height;
                
               
                $('#bg_wrapper').css("margin-top",nav_height);
                
                
                 var cont_wrapper=$('#content_wrapper').height();
                
                if(bg_wrap_height>cont_wrapper)
                {
                 $('#bg_wrapper').css("height",bg_wrap_height);
                 var cont_wrapper_padding=(bg_wrap_height-cont_wrapper)/2;
                 $('#content_wrapper').css("padding-top",cont_wrapper_padding);
                }
                else
                {
                    
                    var new_height=cont_wrapper+30;
                     
                    $('#bg_wrapper').css("height",new_height);
                }            
                }

            $(document).ready(function(){
                
                al_common();
                
                $(window).resize(function(){
                    al_common();
                });    
                    
                
            });
        </script>
